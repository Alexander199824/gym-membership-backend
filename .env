# Configuración del servidor
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Configuración de Base de Datos PostgreSQL (Render)
DB_HOST=dpg-xxxxxxxx-xxxx.oregon-postgres.render.com
DB_PORT=5432
DB_NAME=gym_membership_db
DB_USER=gym_user
DB_PASSWORD=your_strong_password_here
DB_SSL=true

# Variable para resetear base de datos (true = elimina y recrea todas las tablas)
RESET_DATABASE=false

# JWT Secret Keys
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here

# Google OAuth 2.0 (Consola de Google Cloud)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Cloudinary (Para almacenamiento de imágenes - Plan gratuito)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Gmail SMTP - Gratuito)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gym-email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM="Gym System <your-gym-email@gmail.com>"

# WhatsApp Configuration (Twilio - Plan gratuito limitado)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
WHATSAPP_ENABLED=true

# Configuración de Notificaciones
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WHATSAPP_ENABLED=true

# URLs del Frontend (para CORS y redirecciones)
FRONTEND_URL=http://localhost:3000
ADMIN_PANEL_URL=http://localhost:3001

# Configuración de archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de sesiones
SESSION_SECRET=your_session_secret_key_here